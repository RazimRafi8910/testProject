
<%- include('../partials/header.ejs') %>
<%- include('../partials/admin-navebar.ejs')%>

<div class="px-4 col-xl-10 col-lg-9 col-md-9 col-10">
    
    <h2 class="mt-4 fw-bold subheading px-5">Users</h2>
    <hr size="4">

    <div class="mx-5 border">
        <div class="row">
            <form class="d-flex col-lg-8 col-10 ms-4 my-3">
                <input class="form-control me-1 py-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-dark px-3" type="submit">Search</button>
            </form>
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-white fs-5">
                      <tr>
                        <th scope="col">Username</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phone</th>
                        <th scope="col"></th>
                      </tr>
                    </thead>
                    <tbody class="table-secondary fs-5">
                        <% if(users) { %>
                            <% users.forEach(function(user){ %>
                      <tr></tr>
                        <th scope="row"><%= user.username %></th>
                        <td><%= user.email %></td>
                        <td><%= user.number %></td>
                        <td><a href="/admin/user/<%= user._id %>/view"><button class="btn btn-outline-dark fw-bold" type="button">View Details</button></a></td>
                      </tr> 
                      <% })} else { %>
                        <h5>no users found</h5>
                        <% } %>
                    </tbody>
                  </table>
            </div>
        </div>
    </div>





</div>
</div>
</div>
</div>  