
<%- include('../partials/header.ejs') %>
<%- include('../partials/admin-navebar.ejs')%>

<div class="px-4 col-xl-10 col-lg-9 col-md-9 col-10">
    
    <h2 class="mt-4 fw-bold subheading px-5">Users</h2>
    <hr size="4">

    <div class="mx-5 border">
        <div class="row">
            <form class="d-flex col-lg-8 col-10 ms-4 my-3">
                <input class="form-control me-1 py-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-dark px-3" type="submit">Search</button>
            </form>
            
            <table class="table align-middle mx-3 mb-0 bg-white">
              <thead class="bg-light">
                <tr>
                  <th>Name</th>
                  <th>Phone</th>
                  <th>Status</th>
                  <th>Role</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                <% if(users) { %>
                  <% users.forEach(function(user){ %>
                <tr>
                  <td>
                    <div class="d-flex align-items-center">
                      <div class="ms-3">
                        <p class="fw-bold mb-1"><%= user.username %></p>
                        <p class="text-muted mb-0"><%= user.email %></p>
                      </div>
                    </div>
                  </td>
                  <td>
                    <p class="fw-normal mb-1"><%= user.number %></p>
                  </td>
                  <td>
                    <p class="mb-1"><%= user.accountStatus %></p>
                  </td>
                  <td><%= user.role %></td>
                  <td>
                    <a href="/admin/user/<%= user._id %>/view" type="button" class="btn btn-sm btn-primary btn-rounded">Details</a>       
                  </td>
                </tr>
                
                </tr>
                <% })} else { %>
                  <h5>no users found</h5>
                <% } %>
              </tbody>
            </table>

        </div>
    </div>

    



</div>
</div>
</div>
</div>  




