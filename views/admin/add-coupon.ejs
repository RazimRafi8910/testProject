<%- include('../partials/header.ejs') %>
<%- include('../partials/admin-navebar.ejs')%>


<div class="px-4 col-xl-10 col-lg-9 col-md-9 col-10">
        <h2 class="mt-4 fw-bold subheading px-5">New Coupons</h2>
        <hr size="4">
    <div class="row mx-3">
        <form class="row g-3" action="/admin/coupon/add" method="post">
            <div class="col-md-6">
              <% if( message.couponName ) { %>
                <label for="floatingInputInvalid" class="text-danger"><%= message.couponName %></label>
                <input type="text" name="couponName" class="form-control is-invalid" id="floatingInputInvalid">
              <% } else { %>
                <label for="inputEmail4" class="form-label">Coupon Name</label>
                <input type="text" name="couponName" class="form-control" id="couponName">
                <% } %>
            </div>
            <div class="col-md-6">
              <% if( message.description ) { %>
                <label for="floatingInputInvalid" class="text-danger"><%= message.description %></label>
                <input type="text" name="description" class="form-control is-invalid" id="floatingInputInvalid">
              <% } else { %>
              <label for="inputPassword4" class="form-label">Description</label>
              <input type="text" name="description" class="form-control" id="description">
              <% } %>
            </div>
            <div class="col-md-6">
              <% if( message.discount ) { %>
                <label for="floatingInputInvalid" class="text-danger"><%= message.discount %></label>
                <input type="text" name="discount" class="form-control is-invalid" id="floatingInputInvalid">
              <% } else { %>
              <label for="inputAddress2" class="form-label">Discount</label>
              <input type="number" name="discount" class="form-control" id="discount">
              <% } %>
            </div>
            <div class="col-md-6">
              <% if( message.limit ) { %>
                <label for="floatingInputInvalid" class="text-danger"><%= message.limit %></label>
                <input type="text" name="limit" class="form-control is-invalid" id="floatingInputInvalid">
              <% } else { %>
                <label for="inputAddress2" class="form-label">limit</label>
                <input type="number" name="limit" class="form-control" id="limit">
                <% } %>
              </div>
            <div class="col-md-6">
                <label for="inputAddress" class="form-label">Date</label>
                <input type="date" name="expriyDate" class="form-control" id="expriyDate" >
              </div>
            <div class="col-12">
              <button type="submit" class="btn btn-primary">Add</button>
            </div>
          </form>
    </div>

</div>
</div>
</div>
</div>